#!/bin/bash

function q-myip()
{
	case $(uname) in
	Darwin|*BSD)
		local ip=$(ifconfig  | grep -E 'inet.[0-9]' | grep -v '127.0.0.1' | awk '{ print $2}')
		;;
	*)
		local ip=$(hostname --all-ip-addresses | tr " " "\n" | grep -v "0.0.0.0" | grep -v "127.0.0.1")
		;;
	esac
	echo "${ip}"
}

function q-pwd() {
for x in `q-myip`
do
    if [ -z "$1" ]; then 
        echo "'"`whoami`@$x:`pwd`"'"
    else
        path="$(readlink -f "$1")"
        echo "'"`whoami`@$x:"$path""'"
    fi
done
}


q-pwd "$@"
